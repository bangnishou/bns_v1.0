<!--pages/huishou/people/weight/weight.wxml-->
<view>
  <radio-group bindchange="selectWeight">
    <block wx:for="{{weight}}" wx:key="item">
      <radio value="{{index}}" checked="{{item.id==id}}">{{item.desc}}</radio>
    </block>
  </radio-group>
  <button size="mini" bindtap="goBack">确定</button>
</view>